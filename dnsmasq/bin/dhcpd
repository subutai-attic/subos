#!/bin/bash
#Include enviroment variables
. $(cd `dirname "${BASH_SOURCE[0]}"` && pwd)/subutai.env

while [ "`ifconfig | grep '10.10.0.254' | wc -l`" -eq "0" ]; do
        sleep 1
done
  
dnsmasq -k -p 0 --interface=nat --dhcp-range=10.10.0.10,10.10.0.240,12h --dhcp-leasefile=$SUBUTAI_DATA_PREFIX/dnsmasq.leases --dhcp-option=6,10.10.0.254
