#!/bin/bash

#Include enviroment variables
. $(cd `dirname "${BASH_SOURCE[0]}"` && pwd)/subutai.env
  
mkdir -p /var/run/openvswitch/

while [ "`ip link | grep 'br-int' | wc -l`" -eq "0" ]; do
	mkdir -p /var/run/openvswitch/
	sleep 1
	ovs-vsctl --may-exist add-br br-int
	ovs-vsctl --may-exist add-port br-int eth0
done

while [ "`ip link | grep 'br-mng' | wc -l`" -eq "0" ]; do
	ovs-vsctl --may-exist add-br br-mng
	ovs-vsctl --may-exist add-port br-mng eth1
done

ifconfig eth0 up 
ifconfig eth1 up 
ifconfig eth0 0
ifconfig eth1 0
dhclient br-int &
dhclient br-mng &

$SUBUTAI_DATA_PREFIX/var/subutai-network/service-interface start
